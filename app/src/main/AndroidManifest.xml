<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mr7.classroom">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".features.forum.ForumDiscussionActivity"
            android:label="@string/title_activity_forume_discussion"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="features.HomeActivity" />
        </activity>
        <activity
            android:name=".features.lectures.LectureActivity"
            android:label="@string/title_activity_lecture"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".features.HomeActivity" />
        </activity>
        <activity android:name=".features.GenericActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="features.HomeActivity" />
        </activity>
        <activity android:name=".features.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".features.forum.ForumActivity"
            android:label="@string/title_activity_forum"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".features.courseInfo.CourseInfoActivity" />
        <activity android:name=".features.message.MessageActivity" />
        <activity android:name=".features.lectures.LectureCreateEditActivity" />
        <activity android:name=".features.faq.FAQActivity" />
        <activity android:name=".features.manage.ManageActivity" />
        <activity android:name=".features.reminder.ReminderActivity" />
        <activity android:name=".features.classExcos.ClassExcosActivity" />
        <activity android:name=".features.events.EventsActivity"></activity>
    </application>

</manifest>